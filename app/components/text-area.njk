{% macro textArea(params) %}
<div class="form-group">
  <label class="label" for="event-name">{{ params.label }}</label>
  {% if params.hint %}
  <div id="{{ parms.id }}-hint" class="hint">{{ params.hint.text }}</div>
  {% endif %}
  <textarea class="textarea" id="{{ params.id }}" name="{{ params.name }}" rows="{{ params.rows or '5' }}" {% if params.hint %}aria-describedby="{{ parms.id }}-hint"{% endif %}></textarea>
</div>
{% endmacro %}