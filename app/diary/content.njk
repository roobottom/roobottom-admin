{% extends "layouts/wrapper.njk" %}

{% block body %}
{% if markdownDataString %}
<pre>{{ markdownDataString }}</pre>
{% endif %}
{% if errors %}
<h2>There are errors in the form:</h2>
{{ errors | dump }}
{% endif %}
<form action="/diary-create" method="post">
  {{
    textInput({
      label: "Summary",
      id: "summary",
      name: "summary"
    })
  }}

  {{
    textInput({
      label: "Date",
      hint: {
        text: "Leave blank for now, or use natural language"
      },
      id: "date",
      name: "date"
    })
  }}

  {{
    textInput({
      label: "Tags",
      hint: {
        text: "comma seperated list"
      },
      id: "tags",
      name: "tags"
    })
  }}

  {{
    textArea({
      label: "Content",
      id: "content",
      name: "content"
    })
  }}

  <button>Continue</button>

</form>
{% endblock %}