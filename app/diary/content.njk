{% extends "layouts/wrapper.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}

{% block content %}
  <h1 class="govuk-heading-xl">{{ title }}</h1>

  <form action="/diary/process-content" method="post">
    {{ govukInput({
      id: "summary",
      name: "summary",
      label: {
        classes: "govuk-label--s",
        text: "Summary"
      },
      hint: {
        text: "What this post is about in a few words"
      }
    }) }}

    {{ govukInput({
      id: "date",
      name: "date",
      label: {
        classes: "govuk-label--s",
        text: "Date and time"
      },
      hint: {
        text: "For example ‘today at 3pm’ or ‘last tuesday afternoon’. Leave blank to set date to now."
      }
    }) }}

    {{ govukInput({
      id: "tags",
      name: "tags",
      label: {
        classes: "govuk-label--s",
        text: "Tags"
      },
      hint: {
        text: "Comma seperated list"
      }
    }) }}

    {{ govukTextarea({
      id: "content",
      name: "content",
      label: {
        classes: "govuk-label--s",
        text: "Content"
      }
    }) }}

    {{ govukCheckboxes({
      name: "compendium",
      items: [
        {
          value: "false",
          text: "Hide in the printed book?"
        }
      ]
    }) }}

    {{ govukButton({
      text: "Save and continue"
    }) }}
  </form>
{% endblock %}
